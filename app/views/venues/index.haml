%h1= @venues.first.event.name

%p#notice= notice
= link_to 'Add New Venue', new_event_venue_path

%h2 Call These
%table
  %thead
    %tr
      %th Name
      %th Phone
      %th Status
      %th
      %th{:colspan => "3"}
  %tbody
    - @venues.needs_follow_up.each do |venue|
      %tr
        %td= link_to venue.name, venue.website
        %td= venue.phone
        %td= venue.status
        %td= link_to 'Edit', edit_event_venue_path(venue.event, venue)

%h1 All Venues
%table
  %thead
    %tr
      %th Name
      %th State
      %th Status
      %th
      %th{:colspan => "3"}
  %tbody
    - @venues.each do |venue|
      %tr
        %td= link_to venue.name, venue.website
        %td= venue.state
        %td= venue.status
        %td= link_to 'Edit', edit_event_venue_path(venue.event, venue)
        %td= "|"
        %td= link_to 'Email', venue.email
        %td= "|"
        %td= link_to 'Update', new_event_venue_update_path(venue.event, venue)
